{
  "compilerOptions": {
   "target": "ES2022",
   "lib": ["ES2022", "DOM", "DOM.Iterable"],
   "module": "ESNext",
   "moduleResolution": "bundler",
   "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "baseUrl": ".",
  "paths": {
    "@/*": [
      "src/*"
    ],
    "@shared/*": [
      "../shared/*"
    ],
    "@assets/*": [
      "../attached_assets/*"
    ]
  },
  "extends": "./tsconfig.base.json"
}